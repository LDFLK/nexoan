# Database Heartbeat Monitor Environment Variables
# Copy this file to heartbeat.env and modify as needed

# Neo4j Configuration
# URL for Neo4j HTTP API (usually http://container-name:7474)
NEO4J_URL=
# Username for Neo4j authentication
NEO4J_USER=
# Password for Neo4j authentication
NEO4J_PASSWORD=

# PostgreSQL Configuration
# Hostname or IP address of PostgreSQL server
POSTGRES_HOST=
# Port number for PostgreSQL connection (default: 5432)
POSTGRES_PORT=
# Username for PostgreSQL authentication
POSTGRES_USER=
# Password for PostgreSQL authentication
POSTGRES_PASSWORD=
# Database name to monitor
POSTGRES_DB=

# MongoDB Configuration
# Hostname or IP address of MongoDB server
MONGODB_HOST=
# Port number for MongoDB connection (default: 27017)
MONGODB_PORT=
# Username for MongoDB authentication
MONGODB_USER=
# Password for MongoDB authentication
MONGODB_PASSWORD=
# Database name to monitor
MONGODB_DB=

# Monitoring Configuration
# Interval in seconds between heartbeat checks (default: 30)
HEARTBEAT_INTERVAL=
